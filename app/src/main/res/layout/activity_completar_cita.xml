<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CompletarCitaActivity"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@drawable/gradiente1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:gravity="center|center_vertical"
        android:text="PACIENTE"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNombrePaciente"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:gravity="center|center_vertical"
        android:text="nombre"/>

    <TextView
        android:id="@+id/tvFechaHora"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:gravity="center|center_vertical"
        android:text="fecha-hora"/>

    <TextView
        android:id="@+id/tvMutua"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:gravity="center|center_vertical"
        android:text="mutua"/>

    <EditText
        android:id="@+id/tvObservaciones"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:gravity="center|center_vertical"
        android:lines="5"
        android:inputType="textMultiLine"
        android:hint="observaciones"/>

    <EditText
        android:id="@+id/tvRecomendaciones"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:gravity="center|center_vertical"
        android:lines="5"
        android:inputType="textMultiLine"
        android:hint="recomendaciones"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="8"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="35" />

        <Button
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@drawable/boton4"
            android:onClick="completarCita"
            android:text="COMPLETAR"
            android:textColor="@color/colorTexto1"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="35" />

    </LinearLayout>



</LinearLayout>