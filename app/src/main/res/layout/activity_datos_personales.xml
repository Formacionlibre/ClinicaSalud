<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DatosPersonalesActivity"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:gravity="center|center_horizontal"
        android:weightSum="100">

        <EditText
            android:id="@+id/tvNombre"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:hint="Nombre..."/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:gravity="center|center_horizontal"
        android:weightSum="100">

        <EditText
            android:id="@+id/tvApellidos"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:hint="Apellidos..."/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:gravity="center|center_horizontal"
        android:weightSum="100">

        <Spinner
            android:id="@+id/spTipoDocumento"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="90"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:gravity="center|center_horizontal"
        android:weightSum="100">

        <EditText
            android:id="@+id/tvValorDocumento"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:hint="Valor documento..."/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:gravity="center|center_horizontal"
        android:weightSum="100">

        <Spinner
            android:id="@+id/spMutua"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="90"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:gravity="center|center_horizontal"
        android:weightSum="100">

        <EditText
            android:id="@+id/tvTelefono"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:hint="Telefono..."/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:gravity="center|center_horizontal"
        android:weightSum="100">

        <EditText
            android:id="@+id/tvEmail"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:hint="Correo electrÃ³nico..."/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:gravity="center|center_horizontal"
        android:weightSum="100">

        <EditText
            android:id="@+id/tvPassword"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:hint="Password..."/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="8"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:background="@drawable/boton4"
            android:onClick="aceptar"
            android:text="Registrar"
            android:textColor="@color/colorTexto1"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>