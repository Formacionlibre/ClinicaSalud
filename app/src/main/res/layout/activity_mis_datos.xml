<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    tools:context=".misdatos"
    android:orientation="vertical"
    android:weightSum="100"
    android:layout_gravity="center"
    android:background="@drawable/gradient">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:gravity="center|center_horizontal"
        android:weightSum="100">


        <TextView

            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:gravity="center|center_horizontal"
            android:text="MIS DATOS"
            android:textColor="@color/colorTexto1"
            android:textSize="25dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="18"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100">


        <ImageView

            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:gravity="center|center_horizontal"
            android:textColor="@color/colorTexto1"
            android:textSize="25dp"
            android:textStyle="bold"
            app:srcCompat="@drawable/misdatosajustes" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="6"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="8"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100">


        <Button
            android:id="@+id/button2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:background="@drawable/boton4"
            android:gravity="center|center_horizontal"
            android:onClick="modificarDatos"
            android:text="Modificar datos del paciente"
            android:textColor="@color/colorTexto1"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="6"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="8"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100">


        <Button
            android:id="@+id/button4"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:background="@drawable/boton4"
            android:gravity="center|center_horizontal"
            android:onClick="cambiarContrasena"
            android:text="Cambiar contraseÃ±a"
            android:textColor="@color/colorTexto1"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="6"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100">
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="8"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100">


        <Button
            android:id="@+id/button5"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:background="@drawable/boton4"
            android:gravity="center|center_horizontal"
            android:onClick="eliminarCuenta"
            android:text="Eliminar paciente"
            android:textColor="@color/colorTexto1"
            android:textStyle="bold" />
    </LinearLayout>





</LinearLayout>