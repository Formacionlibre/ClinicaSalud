<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".activity.AgendaEspecialistaActivity"
    android:background="@drawable/gradiente1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10">

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:gravity="center|center_horizontal"
            android:text="AGENDA"
            android:textColor="@color/colorTexto2"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:weightSum="99">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="20" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton5"
            android:onClick="clickVerCitasHoy"
            android:text="HOY"
            android:textColor="@color/colorTexto2"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="20" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton5"
            android:onClick="clickVerCitasSemanal"
            android:text="SEMANAL"
            android:textColor="@color/colorTexto2"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="20" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton5"
            android:onClick="clickVerCitasMensual"
            android:text="MENSUAL"
            android:textColor="@color/colorTexto2"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="20" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton5"
            android:onClick="clickAnadirCita"
            android:text="ANADIR CITA"
            android:textColor="@color/colorTexto2"
            android:textSize="12sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="20"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvCitas"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="70" />

</LinearLayout>