<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".activity.CambiarContrasenaActivity"
    android:background="@drawable/gradient">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:gravity="center|center_horizontal"
        android:text="NUEVA CONTRASEÑA"

        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tvNuevaContrasena"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:gravity="center|center_horizontal"
        android:hint="Escribe nueva contraseña"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:gravity="center|center_horizontal"
        android:text="CONFIRMAR CONTRASEÑA"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tvRepiteNuevaContrasena"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:gravity="center|center_horizontal"
        android:hint="Repite nueva contraseña"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="30" />

        <Button

            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:background="@drawable/boton4"
            android:onClick="cambiarContrasena"
            android:text="Aceptar"
            android:textColor="@color/colorTexto1"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="30" />

    </LinearLayout>





</LinearLayout>